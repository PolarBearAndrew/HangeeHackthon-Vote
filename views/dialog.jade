.modal.fade.bs-example-modal-lg(tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true")
  .modal-dialog.modal-lg
    form#creatTeam.modal-content(action="/api/team", method="post", enctype="multipart/form-data")
      .modal-header
        botton.close(type="button" aria-label="Close" data-dismiss="modal")
          span(aria-hidden="true") &times;
        h4.modal-title
          | 建立隊伍
      .modal-body

        .form-group.col-md-6
          label(for="teamName") TEAM NAME
          input#teamName.form-control(type="text" placeholder="TEAM NAME" name="name")
        .form-group.col-md-6
          label(for="projectName") PROJECT NAME
          input#projectName.form-control(type="text" placeholder="PROJECT NAME" name="projectName")
        .form-group.col-md-6
          label(for="projectDetail") PROJECT DETAIL
          input#projectDetail.form-control(type="text" placeholder="PROJECT DETAIL" name="projectDetail")
        .form-group.col-md-6
          label(for="github") GITHUB
          input#github.form-control(type="text" placeholder="GITHUB" name="github")
        .form-group.col-md-12
          label(for="imgURL") TEAM PICTURE
          input#imgURL(type="file" name="imgURL")
        .form-group.col-md-12
          label TEAM MEMBER
        - for( x = 1; x<=6; x++ )
          .member
            .form-group.col-md-4
              input.form-control(id="id#{x}" type="text" placeholder="ID#{x}")
            .form-group.col-md-4
              input.form-control(id="name#{x}" type="text" placeholder="NAME#{x}")
            .form-group.col-md-4
              input.form-control(id="phone#{x}" type="text" placeholder="PHONE#{x}")
        .clearfix
      .modal-footer
        button.btn.btn-default(type="button" data-dismiss="modal")
          | 關閉
        button.btn.btn-primary(type="submit") 建立完成