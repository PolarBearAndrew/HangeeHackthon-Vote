extends layout

block content

  .container
    .video
    .wrap

        //- iframe#hero.full(src='//www.youtube.com/embed/uHgbfzNqduc?list=123?controls=0&autoplay=1&showinfo=0&iv_load_policy=3&start=0&version=3&loop=1&playlist=uHgbfzNqduc', frameborder='0')
      .row
        .layer.dot-overlay
        .col-lg-12

          h1.page-header
            | Hackathon Taiwan 作品
            br
            small 請投下您神聖的票
             button#submitVotebanner.btn.btn-primary.tab(onclick="") 送出投票
      - for (var i = 0; i < data.length; i++)
        - if( i %4 == 0 )
          .row
        label.col-md-3.portfolio-item.team-box(for="slideOne"+i)
          input(type="checkbox" value="None" id="slideOne"+i name="check"  data-id="#{data[i]._id}")
          label.checkbox(for="slideOne"+i)
            i.glyphicon.glyphicon-thumbs-up.up
          a
            - if( data[i].imgURL )
              img.img-responsive(src= data[i].imgURL, alt='')
            - else
              img.img-responsive(src='https://hackathon.tw/img/study.jpg', alt='')
          .works-info
            = data[i].name
            br
            = data[i].projectName
